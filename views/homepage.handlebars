<ol class="post-list">
  {{#each posts as |post|}}
    <li>
      <article class="post">
        <div class="title">
          <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
          <span>({{post.post_url}})</span>
        </div>
        <div class="meta">
          <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
      </article>
      <ol class="post-list">
  {{#each posts as |post|}}
  <li>
    {{> post-info post }}
  </li>
  {{/each}}
</ol>
    </li>
  {{/each}}
</ol>